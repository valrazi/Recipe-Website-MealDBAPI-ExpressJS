<%-include('partials/head') %>
<body>
    <header>
        <%-include('partials/header')%>
    </header>
    <div class="text-black">
        <h3 class="mx-2 my-2">Available <%=params%> Recipe</h3>
    </div>
    <div class="d-flex flex-row justify-content-start flex-wrap">
        
        <% menu.forEach(function(perMenu){%>
        <div class="card mx-2 my-2" style="width: 10rem;">
            <img src="<%=perMenu.strMealThumb%>" class="card-img-top">
            <div class="card-body">
            <h5 class="card-title fs-6"><b><%=perMenu.strMeal%></b></h5>
            <a href="detail/<%=perMenu.idMeal%>" class="btn btn-outline-success btn-sm">Detail</a>
            </div>
        </div>
        <% })%>
    </div>
    <footer>
      <%-include('partials/footer')%>
    </footer>
</body>
</html>