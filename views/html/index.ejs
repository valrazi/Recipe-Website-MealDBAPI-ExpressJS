<%-include('partials/head') %>
<body>
    <header>
        <%-include('partials/header')%>
    </header>
    <div class="text-center bg-image d-flex justify-content-center align-items-center" style="
    background-image: url('https://images.pexels.com/photos/349610/pexels-photo-349610.jpeg');
    height: 300px;
    background-size: cover;
    background-repeat: no-repeat;">
  <div style="background-color: rgba(0, 0, 0, 0.15); width: 100%; height: 100%;">
    <div class="d-flex justify-content-center align-items-center h-400 p-5">
      <div class="text-white">
        <h1 class="mb-3">MenuDB</h1>
        <h4 class="mb-3">Find Your Recipes Here!</h4>
      </div>
    </div>
  </div>
</div>
    <div class="text-black">
        <h3 class="mx-2 my-2">Available Recipe Categories</h3>
    </div>
    <div class="d-flex flex-row justify-content-start flex-wrap">
        
        <% menu.forEach(function(perMenu){%>
        <div class="card mx-2 my-2" style="width: 10rem;">
            <img src="<%=perMenu.strCategoryThumb%>" class="card-img-top">
            <div class="card-body">
            <h5 class="card-title fs-6"><b><%=perMenu.strCategory%></b></h5>
            <a href="category/<%=perMenu.strCategory%>" class="btn btn-outline-success btn-sm">Find Recipe</a>
            </div>
        </div>
        <% })%>
    </div>
    <footer>
      <%-include('partials/footer')%>
    </footer>
</body>
</html>